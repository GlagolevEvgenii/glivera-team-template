//mixin
mixin tabs(array)
  .tabs_wrap
    .tab_link_wrap
      each item, index in array
        a.tab_link(href="#" data-tab= index class= item.item_mod)
          .tab_title(class= item.title)
          .tab_img(class= item.img_mod)


//pug
+tabs([
  {
    item_mod: 'active_tab',
    img_mod:'v1_mod',
    title: 'Title 1'

  },{
    img_mod:'v2_mod',
    title: 'Title 2'
  }
])

-
  list = [
    [
      {
        img: 'i/1.1.jpg'
      },
      {
        img: 'i/1.2.jpg'
      }
    ],[
      {
        img: 'i/2.1.jpg'
      },
      {
        img: 'i/2.2.jpg'
      }
    ]
  ]

.tab_content_wrap
  each item, index in list
    .tab_content(class= `${index == 0 ? 'active_tab' : ''}`, data-tab= index)
		
